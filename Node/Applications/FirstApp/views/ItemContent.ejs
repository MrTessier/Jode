    function changeRating(clickedStar, newRating) {
        let previousStars = clickedStar.prevAll();  // Get all the previous star buttons.
        clickedStar.find("i").removeClass("far").addClass("fas").attr("data-original", "fas");  // Make this one selected and change the original class to selected.
        previousStars.find("i").removeClass("far").addClass("fas").attr("data-original", "fas");  // Make all previous selected and change their original classes to selected.
    }

    function configItem(itemTitle) {
        $("div#ConfigureItemModal").modal("show");
        $("#ConfigureTitle").text("Configure " + itemTitle);
        getContent($("div#ConfigureItemModal").find("div.modal-body"), "http://localhost:8080/jode/ItemContent/ItemConfigureModal/5");
    }

    function ratingMousedOver(currentStar) {
        let previousStars = currentStar.prevAll();  // Get all the previous star buttons.
        currentStar.find("i").removeClass("far").addClass("fas ratingHover");  // Make this one selected
        previousStars.find("i").removeClass("far").addClass("fas ratingHover");  // Make all previous selected.
    }

    function ratingMousedOut(currentStar) {
        //let icon = currentStar.find("i");  // Find the star icon.
        //let originalClass = icon.data("original");  // Get the original class which was on the star.
        //icon.removeClass("fas ratingHover").addClass(originalClass); // Remove the hover class and put the original class back.

        let allStars = $("i.fa-star");
        for (i = 0; i < allStars.length; i++) {
            let loopStar = $(allStars[i]);
            let originalClass = loopStar.data("original");  // Get the original class which was on the star.
            loopStar.removeClass("fas ratingHover").addClass(originalClass);
        };
    }

</script>

