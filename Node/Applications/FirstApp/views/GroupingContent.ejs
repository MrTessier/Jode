
<style type="text/css">
    button.groupingItem {
        border: solid 2px gray;
        border-radius: 8px;
        margin-right: 5px;
        width: 100%;
        min-height: 200px;
        cursor: pointer;
    }

    div.groupingItem i {
        font-size: 3em;
    }

    .centeredContent {
        width: 100%;
        text-align: center;
    }

    div.dividerForCard {
        border-right: solid 3px green;
        height: 85px;
        margin: 8px 0;
    }
</style>

<script type="text/javascript">
    function groupingClicked(groupClicked) {
        alert("You clicked on a group: " + groupClicked);
    }
</script>

<div class="row">
    <div class="col-xs-3 col-md-2 ">
        <button class="btn btn-secondary groupingItem" onclick="groupingClicked(-1);">
            <div class="row">
                <span class="centeredContent">
                    <i class="fa fa-plus" aria-hidden="true"></i>
                </span>
            </div>
            <div class="row">
                <span class="centeredContent">
                    New Grouping
                </span>
            </div>
        </button>
    </div>

    <div class="col-xs-3 col-md-2 groupingItem">
        <button class="btn btn-secondary groupingItem" onclick="groupingClicked(1);">
            <div class="row">
                <div class="col-5">
                    <span class="centeredContent">
                        <i class="fa fa-car" aria-hidden="true"></i>
                    </span>
                </div>
                <div class="col-2">
                    <div class="centeredContent">
                        <div class="dividerForCard"></div>
                    </div>
                </div>
                <div class="col-5">
                    <div class="centeredContent">
                        63
                    </div>
                </div>
            </div>
            <div class="row">
                <span class="centeredContent">
                    Automotive
                </span>
            </div>
        </button>
    </div>

</div>